    {
        "id": "4df00a4a109b2960",
        "type": "function",
        "z": "f6f2187d.f17ca8",
        "name": "function 2",
        "func": "// Configurações\nconst LIMITE_ALARME = 75.0;        // entra\nconst LIMITE_NORMAL = 65.0;        // sai\nconst REENVIO_MS = 60 * 60 * 1000;     // 1 hora (0 para desativar)\n\nconst temp = Number(msg.payload);\nconst now = Date.now();\n\nlet alarmado = context.get(\"alarmado\") || false;\nlet ultimoEnvio = context.get(\"ultimoEnvio\") || 0;\n\nlet deveEnviar = false;\nlet tipo = null;\n\n// entrou em alarme\nif (!alarmado && temp >= LIMITE_ALARME) {\n  alarmado = true;\n  deveEnviar = true;\n  tipo = \"ALARME\";\n}\n// voltou ao normal\nelse if (alarmado && temp <= LIMITE_NORMAL) {\n  alarmado = false;\n  deveEnviar = true;\n  tipo = \"NORMAL\";\n}\n// reenvio periódico enquanto segue em alarme\nelse if (alarmado && REENVIO_MS > 0 && (now - ultimoEnvio) >= REENVIO_MS) {\n  deveEnviar = true;\n  tipo = \"RENOTIF\";\n}\n\ncontext.set(\"alarmado\", alarmado);\nif (!deveEnviar) return null;\ncontext.set(\"ultimoEnvio\", now);\n\n// passa adiante dados para o Telegram\nmsg.alerta = { tipo, temp, ts: now };\nreturn msg;",
        "outputs": 1,
        "timeout": 0,
        "noerr": 0,
        "initialize": "",
        "finalize": "",
